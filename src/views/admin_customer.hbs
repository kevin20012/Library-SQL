<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>고객정보 관리</title>
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Header Section -->
		<nav class="navbar navbar-light bg-light shadow-sm mb-4">
			<div class="container">
				<a href="/admin" class="navbar-brand d-flex align-items-center">
					<span class="fs-1 me-3">←</span>
					<h1 class="h3 m-0">고객정보 관리</h1>
				</a>
			</div>
		</nav>

		<!-- Add Customer Section -->
		<div class="container mb-4">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">추가하기</h2>
					<form method="post" action="/admin/customer/insert">
						<div class="row mb-3">
							<div class="col-md-3">
								<label for="email" class="form-label"><b
									>Email</b></label>
								<input
									type="email"
									placeholder="example@example.com"
									name="email"
									id="email"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-2">
								<label for="phone" class="form-label"><b
									>Phone</b></label>
								<input
									type="text"
									name="phone"
									id="phone"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label for="address" class="form-label"><b
									>Address</b></label>
								<input
									type="text"
									name="address"
									id="address"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-2">
								<label for="name" class="form-label"><b
									>Name</b></label>
								<input
									type="text"
									name="name"
									id="name"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-1">
								<label for="password" class="form-label"><b
									>Password</b></label>
								<input
									type="text"
									name="password"
									id="password"
									class="form-control"
									required
								/>
							</div>
						</div>
						<div class="text-end">
							<button
								type="submit"
								class="btn btn-primary"
							>추가</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<!-- Customer Information Section -->
		<div class="container">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">고객정보</h2>
					<p>{{pageInfo.currentPage}}
						/
						{{pageInfo.totalPages}}
						(total
						{{pageInfo.totalCount}})</p>
					<table class="table table-bordered table-striped">
						<thead class="table-light">
							<tr>
								<th>Email</th>
								<th>Phone</th>
								<th>Address</th>
								<th>Name</th>
								<th>수정</th>
								<th>삭제</th>
							</tr>
						</thead>
						<tbody>
							{{#each Data}}
								<tr>
									<form method="post">
										<input
											type="hidden"
											name="email_origin"
											value="{{Email}}"
										/>
										<td><input
												type="email"
												name="email_modify"
												class="form-control"
												value="{{Email}}"
											/></td>
										<td><input
												type="text"
												name="phone"
												class="form-control"
												value="{{Phone}}"
											/></td>
										<td><input
												type="text"
												name="address"
												class="form-control"
												value="{{Address}}"
											/></td>
										<td><input
												type="text"
												name="name"
												class="form-control"
												value="{{Name}}"
											/></td>
										<td>
											<button
												type="submit"
												class="btn btn-warning"
												formaction="/admin/customer/update"
											>수정</button>
										</td>
										<td>
											<button
												type="submit"
												class="btn btn-danger"
												formaction="/admin/customer/delete"
											>삭제</button>
										</td>
									</form>
								</tr>
							{{/each}}
						</tbody>
					</table>

					<!-- Pagination -->
					<nav
						aria-label="Page navigation"
						class="d-flex justify-content-center"
					>
						<ul class="pagination">
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/customer?page=1"
								>&laquo;</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/customer?page={{pageInfo.prevPage}}"
								>이전</a>
							</li>
							{{#each Page}}
								<li class="page-item {{#if (eq this ../pageInfo.currentPage)}}active{{/if}}">
									<a
										class="page-link"
										href="/admin/customer?page={{this}}"
									>{{this}}</a>
								</li>
							{{/each}}
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/customer?page={{pageInfo.nextPage}}"
								>다음</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/customer?page={{pageInfo.totalPages}}"
								>&raquo;</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		<!-- Bootstrap JS -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		></script>
	</body>
</html>