<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>상 정보 관리</title>
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Header Section -->
		<nav class="navbar navbar-light bg-light shadow-sm mb-4">
			<div class="container">
				<a href="/admin" class="navbar-brand d-flex align-items-center">
					<span class="fs-1 me-3">←</span>
					<h1 class="h3 m-0">상 정보 관리</h1>
				</a>
			</div>
		</nav>

		<!-- Add Award Section -->
		<div class="container mb-4">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">추가하기</h2>
					<form method="post" action="/admin/award/insert">
						<div class="row mb-3">
							<div class="col-md-4">
								<label for="Name" class="form-label"><b
									>Name</b></label>
								<input
									type="text"
									name="Name"
									id="Name"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label for="Year" class="form-label"><b
									>Year</b></label>
								<input
									type="number"
									min="1900"
									max="2100"
									name="Year"
									id="Year"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label for="ID" class="form-label"><b
									>ID</b></label>
								<input
									type="text"
									name="ID"
									id="ID"
									class="form-control"
									required
								/>
							</div>
						</div>
						<div class="text-end">
							<button
								type="submit"
								class="btn btn-primary"
							>추가</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<!-- Award Information Section -->
		<div class="container">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">상 정보</h2>
					<p>{{pageInfo.currentPage}}
						/
						{{pageInfo.totalPages}}
						(total
						{{pageInfo.totalCount}})</p>
					<table class="table table-bordered table-striped">
						<thead class="table-light">
							<tr>
								<th>Name</th>
								<th>Year</th>
								<th>ID</th>
								<th>수정</th>
								<th>삭제</th>
							</tr>
						</thead>
						<tbody>
							{{#each Data}}
								<tr>
									<form method="post">
										<td>
											<input
												type="text"
												name="Name"
												class="form-control"
												value="{{Name}}"
											/>
										</td>
										<td>
											<input
												type="number"
												min="1900"
												max="2100"
												name="Year"
												class="form-control"
												value="{{Year}}"
											/>
										</td>
										<td>
											<input
												type="hidden"
												name="ID_origin"
												value="{{ID}}"
											/>
											<input
												type="text"
												name="ID_modify"
												class="form-control"
												value="{{ID}}"
											/>
										</td>
										<td>
											<button
												type="submit"
												class="btn btn-warning"
												formaction="/admin/award/update"
											>수정</button>
										</td>
										<td>
											<button
												type="submit"
												class="btn btn-danger"
												formaction="/admin/award/delete"
											>삭제</button>
										</td>
									</form>
								</tr>
							{{/each}}
						</tbody>
					</table>

					<!-- Pagination -->
					<nav
						aria-label="Page navigation"
						class="d-flex justify-content-center"
					>
						<ul class="pagination">
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/award?page=1"
								>&laquo;</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/award?page={{pageInfo.prevPage}}"
								>이전</a>
							</li>
							{{#each Page}}
								<li class="page-item">
									<a
										class="page-link {{#if (eq this ../pageInfo.currentPage)}}active{{/if}}"
										href="/admin/award?page={{this}}"
									>{{this}}</a>
								</li>
							{{/each}}
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/award?page={{pageInfo.nextPage}}"
								>다음</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/award?page={{pageInfo.totalPages}}"
								>&raquo;</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		<!-- Bootstrap JS -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		></script>
	</body>
</html>