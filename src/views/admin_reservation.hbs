<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>도서 예약 정보 관리</title>
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Header Section -->
		<nav class="navbar navbar-light bg-light shadow-sm mb-4">
			<div class="container">
				<a href="/admin" class="navbar-brand d-flex align-items-center">
					<span class="fs-1 me-3">←</span>
					<h1 class="h3 m-0">도서 예약 정보 관리</h1>
				</a>
			</div>
		</nav>

		<!-- Add Reservation Section -->
		<div class="container mb-4">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">추가하기</h2>
					<form method="post" action="/admin/reservation/insert">
						<div class="row mb-3">
							<div class="col-md-2">
								<label for="ID" class="form-label"><b
									>ID</b></label>
								<input
									style="width: 80px;"
									type="text"
									name="ID"
									id="ID"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-2">
								<label for="Book_ISBN" class="form-label"><b
									>Book ISBN</b></label>
								<input
									style="width: 120px;"
									type="text"
									name="Book_ISBN"
									id="Book_ISBN"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-3">
								<label
									for="Customer_Email"
									class="form-label"
								><b>Customer Email</b></label>
								<input
									type="text"
									name="Customer_Email"
									id="Customer_Email"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-2">
								<label
									for="Reservation_date"
									class="form-label"
								><b>Reservation Date</b></label>
								<input
									type="text"
									name="Reservation_date"
									id="Reservation_date"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-2">
								<label for="Pickup_time" class="form-label"><b
									>Pickup Time</b></label>
								<input
									type="text"
									name="Pickup_time"
									id="Pickup_time"
									class="form-control"
									required
								/>
							</div>
						</div>
						<div class="text-end">
							<button
								type="submit"
								class="btn btn-primary"
							>추가</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<!-- Reservation Information Section -->
		<div class="container">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">도서 예약 정보</h2>
					<p>{{pageInfo.currentPage}}
						/
						{{pageInfo.totalPages}}
						(total
						{{pageInfo.totalCount}})</p>
					<table class="table table-bordered table-striped">
						<thead class="table-light">
							<tr>
								<th>ID</th>
								<th>Book ISBN</th>
								<th>Customer Email</th>
								<th>Reservation Date</th>
								<th>Pickup Time</th>
								<th>수정</th>
								<th>삭제</th>
							</tr>
						</thead>
						<tbody>
							{{#each Data}}
								<tr>
									<form method="post">
										<input
											type="hidden"
											name="ID_origin"
											value="{{ID}}"
										/>
										<td>
											<input
												style="width: 80px;"
												type="text"
												name="ID_modify"
												class="form-control"
												value="{{ID}}"
											/>
										</td>
										<td>
											<input
												style="width: 120px;"
												type="text"
												name="Book_ISBN"
												class="form-control"
												value="{{Book_ISBN}}"
											/>
										</td>
										<td>
											<input
												type="text"
												name="Customer_Email"
												class="form-control"
												value="{{Customer_Email}}"
											/>
										</td>
										<td>
											<input
												type="text"
												name="Reservation_date"
												class="form-control"
												value="{{Reservation_date}}"
											/>
										</td>
										<td>
											<input
												type="text"
												name="Pickup_time"
												class="form-control"
												value="{{Pickup_time}}"
											/>
										</td>
										<td>
											<button
												type="submit"
												class="btn btn-warning"
												formaction="/admin/reservation/update"
											>수정</button>
										</td>
										<td>
											<button
												type="submit"
												class="btn btn-danger"
												formaction="/admin/reservation/delete"
											>삭제</button>
										</td>
									</form>
								</tr>
							{{/each}}
						</tbody>
					</table>

					<!-- Pagination -->
					<nav
						aria-label="Page navigation"
						class="d-flex justify-content-center"
					>
						<ul class="pagination">
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/reservation?page=1"
								>&laquo;</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/reservation?page={{pageInfo.prevPage}}"
								>이전</a>
							</li>
							{{#each Page}}
								<li class="page-item">
									<a
										class="page-link"
										href="/admin/reservation?page={{this}}"
									>{{this}}</a>
								</li>
							{{/each}}
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/reservation?page={{pageInfo.nextPage}}"
								>다음</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/reservation?page={{pageInfo.totalPages}}"
								>&raquo;</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		<!-- Bootstrap JS -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		></script>
	</body>
</html>