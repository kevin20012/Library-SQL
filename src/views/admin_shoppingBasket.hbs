<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>주문 정보 관리</title>
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Header Section -->
		<nav class="navbar navbar-light bg-light shadow-sm mb-4">
			<div class="container">
				<a href="/admin" class="navbar-brand d-flex align-items-center">
					<span class="fs-1 me-3">←</span>
					<h1 class="h3 m-0">주문 정보 관리</h1>
				</a>
			</div>
		</nav>

		<!-- Add Order Section -->
		<div class="container mb-4">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">추가하기</h2>
					<form method="post" action="/admin/shoppingBasket/insert">
						<div class="row mb-3">
							<div class="col-md-4">
								<label for="BasketID" class="form-label"><b
									>BasketID</b></label>
								<input
									type="text"
									name="BasketID"
									id="BasketID"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label for="Order_date" class="form-label"><b
									>Order_date</b></label>
								<input
									type="text"
									name="Order_date"
									id="Order_date"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label
									for="Customer_Email"
									class="form-label"
								><b>Customer_Email</b></label>
								<input
									type="text"
									name="Customer_Email"
									id="Customer_Email"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label for="Book_ISBN" class="form-label"><b
									>Book_ISBN</b></label>
								<input
									type="text"
									name="Book_ISBN"
									id="Book_ISBN"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label for="Number" class="form-label"><b
									>Number</b></label>
								<input
									type="text"
									name="Number"
									id="Number"
									class="form-control"
									required
								/>
							</div>
						</div>
						<div class="text-end">
							<button
								type="submit"
								class="btn btn-primary"
							>추가</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<!-- Order Information Section -->
		<div class="container">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">주문 정보</h2>
					<p>{{pageInfo.currentPage}}
						/
						{{pageInfo.totalPages}}
						(total
						{{pageInfo.totalCount}})</p>
					<table class="table table-bordered table-striped">
						<thead class="table-light">
							<tr>
								<th>BasketID</th>
								<th>Order_date</th>
								<th>Customer_Email</th>
								<th>Book_ISBN</th>
								<th>Number</th>
								<th>수정</th>
								<th>삭제</th>
							</tr>
						</thead>
						<tbody>
							{{#each Data}}
								<tr>
									<form method="post">
										<td style="display:none;"><input
												type="text"
												name="BasketID_origin"
												class="form-control"
												value="{{BasketID}}"
											/></td>
										<td><input
												type="text"
												name="BasketID_modify"
												class="form-control"
												value="{{BasketID}}"
											/></td>
										<td style="display:none;"><input
												type="text"
												name="Order_date_origin"
												class="form-control"
												value="{{Order_date}}"
											/></td>
										<td>
											<input
												type="datetime-local"
												name="Order_date_modify"
												class="form-control"
												value="{{Order_date}}"
											/>
										</td>
										<td style="display:none;"><input
												type="text"
												name="Customer_Email_origin"
												class="form-control"
												value="{{Customer_Email}}"
											/></td>
										<td><input
												type="text"
												name="Customer_Email_modify"
												class="form-control"
												value="{{Customer_Email}}"
											/></td>
										<td><input
												style="outline: none; box-shadow: none; border:none;background-color: transparent;"
												type="text"
												name="Book_ISBN"
												class="form-control"
												value="{{Book_ISBN}}"
												readonly
											/></td>
										<td><input
												style="outline: none; box-shadow: none; border:none;background-color: transparent;"
												type="text"
												name="Number"
												class="form-control"
												value="{{Number}}"
												readonly
											/></td>
										<td>
											<button
												type="submit"
												class="btn btn-warning"
												formaction="/admin/shoppingBasket/update"
											>수정</button>
										</td>
										<td>
											<button
												type="submit"
												class="btn btn-danger"
												formaction="/admin/shoppingBasket/delete"
											>삭제</button>
										</td>
									</form>
								</tr>
							{{/each}}
						</tbody>
					</table>

					<!-- Pagination -->
					<nav
						aria-label="Page navigation"
						class="d-flex justify-content-center"
					>
						<ul class="pagination">
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/shoppingBasket?page=1"
								>&laquo;</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/shoppingBasket?page={{pageInfo.prevPage}}"
								>이전</a>
							</li>
							{{#each Page}}
								<li class="page-item">
									<a
										class="page-link"
										href="/admin/shoppingBasket?page={{this}}"
									>{{this}}</a>
								</li>
							{{/each}}
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/shoppingBasket?page={{pageInfo.nextPage}}"
								>다음</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/shoppingBasket?page={{pageInfo.totalPages}}"
								>&raquo;</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		<!-- Bootstrap JS -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		></script>
	</body>
</html>