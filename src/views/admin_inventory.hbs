<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Inventory 정보 관리</title>
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Header Section -->
		<nav class="navbar navbar-light bg-light shadow-sm mb-4">
			<div class="container">
				<a href="/admin" class="navbar-brand d-flex align-items-center">
					<span class="fs-1 me-3">←</span>
					<h1 class="h3 m-0">Inventory 정보 관리</h1>
				</a>
			</div>
		</nav>

		<!-- Add Inventory Section -->
		<div class="container mb-4">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">추가하기</h2>
					<form method="post" action="/admin/inventory/insert">
						<div class="row mb-3">
							<div class="col-md-4">
								<label
									for="Warehouse_Code"
									class="form-label"
								><b>Warehouse Code</b></label>
								<input
									type="text"
									id="Warehouse_Code"
									name="Warehouse_Code"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label for="Book_ISBN" class="form-label"><b
									>Book ISBN</b></label>
								<input
									type="text"
									id="Book_ISBN"
									name="Book_ISBN"
									class="form-control"
									required
								/>
							</div>
							<div class="col-md-4">
								<label for="Number" class="form-label"><b
									>Number</b></label>
								<input
									type="text"
									id="Number"
									name="Number"
									class="form-control"
									required
								/>
							</div>
						</div>
						<div class="text-end">
							<button
								type="submit"
								class="btn btn-primary"
							>추가</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<!-- Inventory Information Section -->
		<div class="container">
			<div class="card shadow">
				<div class="card-body">
					<h2 class="card-title mb-4">Inventory 정보</h2>
					<p>{{pageInfo.currentPage}}
						/
						{{pageInfo.totalPages}}
						(total
						{{pageInfo.totalCount}})</p>
					<table class="table table-bordered table-striped">
						<thead class="table-light">
							<tr>
								<th>Warehouse Code</th>
								<th>Book ISBN</th>
								<th>Number</th>
								<th>수정</th>
								<th>삭제</th>
							</tr>
						</thead>
						<tbody>
							{{#each Data}}
								<tr>
									<form method="post">
										<input
											type="hidden"
											name="Warehouse_Code_origin"
											value="{{Warehouse_Code}}"
										/>
										<td>
											<input
												type="text"
												name="Warehouse_Code_modify"
												class="form-control"
												value="{{Warehouse_Code}}"
											/>
										</td>
										<input
											type="hidden"
											name="Book_ISBN_origin"
											value="{{Book_ISBN}}"
										/>
										<td>
											<input
												type="text"
												name="Book_ISBN_modify"
												class="form-control"
												value="{{Book_ISBN}}"
											/>
										</td>
										<td>
											<input
												type="text"
												name="Number"
												class="form-control"
												value="{{Number}}"
											/>
										</td>
										<td>
											<button
												type="submit"
												class="btn btn-warning"
												formaction="/admin/inventory/update"
											>
												수정
											</button>
										</td>
										<td>
											<button
												type="submit"
												class="btn btn-danger"
												formaction="/admin/inventory/delete"
											>
												삭제
											</button>
										</td>
									</form>
								</tr>
							{{/each}}
						</tbody>
					</table>

					<!-- Pagination -->
					<nav
						aria-label="Page navigation"
						class="d-flex justify-content-center"
					>
						<ul class="pagination">
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/inventory?page=1"
								>&laquo;</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/inventory?page={{pageInfo.prevPage}}"
								>이전</a>
							</li>
							{{#each Page}}
								<li class="page-item {{#if (eq this ../pageInfo.currentPage)}}active{{/if}}">
									<a
										class="page-link"
										href="/admin/inventory?page={{this}}"
									>{{this}}</a>
								</li>
							{{/each}}
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/inventory?page={{pageInfo.nextPage}}"
								>다음</a>
							</li>
							<li class="page-item">
								<a
									class="page-link"
									href="/admin/inventory?page={{pageInfo.totalPages}}"
								>&raquo;</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		<!-- Bootstrap JS -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		></script>
	</body>
</html>